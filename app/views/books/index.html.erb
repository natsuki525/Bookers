<body>
	<h1>Books</h1>
	<table>
		<thead>
			<th>Title</th>
			<th>Body</th>
			<th>&nbsp;</th>
		</thead>
		<tbody>
			<tr>
				<% @books.each do |book| %>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<% end %>
			</tr>
		</tbody>
		<% link_to 'Show', book_path(book.id) %>
	</table>

	<h2>New book</h2>
	<%= form_for(@book) do |f| %>
		<div class="field">
			<label for="book_title">Title</label>
			<%= f.text_field :title %></p>
		</div>
		<div class="field">
			<label for="book_body">Body</label>
			<%= f.text_area :body %>
		</div>
		<div class="action">
			<%= f.submit 'Create Book' %>
		</div>

	<% end %>
</body>