<body>
	<div class="flash_message">
		<% if flash[:notice] %>
			<p><%= flash[:notice] %></p>
		<% end %>
	</div>
	<p>
		<strong>Title:</strong>
		<%= @book.title %>
	</p>
	<p>
		<strong>Body:</strong>
		<%= @book.body %>
	</p>
	<div class="button">
		<a class="edit"><%= link_to 'Edit', edit_book_path(@book.id) %></a>
		<div class="partition">|</div>
		<a class="back" href="/books">Back</a>
	</div>
</body>